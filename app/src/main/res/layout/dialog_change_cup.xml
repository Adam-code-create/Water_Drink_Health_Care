<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:src="@drawable/cup_1"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:id="@+id/size100"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/size150"
    android:background="?selectableItemBackgroundBorderless"
    style="@style/cup_size_style" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/size100Text"
    android:text="100 ml"
    android:textColor="@color/black"
    app:layout_constraintTop_toBottomOf="@id/size100"
    app:layout_constraintLeft_toLeftOf="@id/size100"
    app:layout_constraintRight_toRightOf="@id/size100"
    />

    <ImageView
        style="@style/cup_size_style"
        android:src="@drawable/cups_2"
        android:layout_margin="16dp"
        android:id="@+id/size150"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/size100"
        app:layout_constraintRight_toLeftOf="@id/size200"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size150Text"
        android:text="150 ml"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/size150"
        app:layout_constraintLeft_toLeftOf="@id/size150"
        app:layout_constraintRight_toRightOf="@id/size150"
        />
    <ImageView
        style="@style/cup_size_style"
        android:src="@drawable/cup_3"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/size200"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/size150"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size200Text"
        android:text="200 ml"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/size200"
        app:layout_constraintLeft_toLeftOf="@id/size200"
        app:layout_constraintRight_toRightOf="@id/size200"
        />
    <ImageView
        style="@style/cup_size_style"
        android:src="@drawable/ic_drink_bottle300"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/size250"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/size100Text"
        app:layout_constraintRight_toLeftOf="@id/size300"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size250Text"
        android:text="250 ml"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/size250"
        app:layout_constraintLeft_toLeftOf="@id/size250"
        app:layout_constraintRight_toRightOf="@id/size250"
        />
    <ImageView
        style="@style/cup_size_style"
        android:src="@drawable/ic_bottle"
        android:layout_margin="16dp"
        android:id="@+id/size300"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toRightOf="@id/size250"
        app:layout_constraintTop_toBottomOf="@id/size150Text"
        app:layout_constraintRight_toLeftOf="@id/size400"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size300Text"
        android:text="300 ml"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/size300"
        app:layout_constraintLeft_toLeftOf="@id/size300"
        app:layout_constraintRight_toRightOf="@id/size300"
        />
    <ImageView
        style="@style/cup_size_style"
        android:src="@drawable/ic_drink_bottle400"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/size400"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toRightOf="@id/size300"
        app:layout_constraintTop_toBottomOf="@id/size200Text"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size400Text"
        android:text="400 ml"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/size400"
        app:layout_constraintLeft_toLeftOf="@id/size400"
        app:layout_constraintRight_toRightOf="@id/size400"
        />
    <ImageView
        style="@style/cup_size_style"
        android:src="@drawable/ic_drink_bottle500"
        android:layout_marginTop="16dp"
        android:id="@+id/size500"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/size250Text"
        app:layout_constraintLeft_toLeftOf="@id/size250"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/size500Text"
        android:text="500 ml"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/size500"
        app:layout_constraintLeft_toLeftOf="@id/size500"
        app:layout_constraintRight_toRightOf="@id/size500"
        />
    <ImageView
        style="@style/cup_size_style"
        android:src="@drawable/ic_cup"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/customize"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/size250Text"
        app:layout_constraintLeft_toLeftOf="@id/size300"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customizeText"
        android:text="Other"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/customize"
        app:layout_constraintLeft_toLeftOf="@id/customize"
        app:layout_constraintRight_toRightOf="@id/customize"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/customizePlus"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/customize"
        app:layout_constraintLeft_toLeftOf="@id/customize"
        app:layout_constraintRight_toRightOf="@id/customize"
        app:layout_constraintTop_toTopOf="@id/customize"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please choose the cup!"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customizeText"
        app:layout_constraintBottom_toTopOf="@id/dialogAssistant"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:lottie_rawRes="@raw/assistant"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/dialogAssistant"
        android:layout_margin="16dp"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:background="?selectableItemBackgroundBorderless"
        android:id="@+id/btn_ok"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/main_color"
        app:layout_constraintTop_toBottomOf="@id/dialogAssistant"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="?selectableItemBackgroundBorderless"
        android:id="@+id/btn_cancel"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/dialogAssistant"
        app:layout_constraintRight_toLeftOf="@id/btn_ok"
        app:layout_constraintBottom_toBottomOf="parent"
       />



</androidx.constraintlayout.widget.ConstraintLayout>