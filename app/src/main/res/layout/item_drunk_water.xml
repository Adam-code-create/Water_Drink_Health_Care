<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:lottie_rawRes="@raw/intro"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:id="@+id/intro"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_cup"
        android:id="@+id/drop"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/intro"
        app:layout_constraintLeft_toLeftOf="@id/timer"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_time"
        android:id="@+id/timer"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/intro"
        app:layout_constraintRight_toLeftOf="@id/waterDrunkTime"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="12sp"
        android:id="@+id/waterDrunkTime"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintTop_toTopOf="@id/intro"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:id="@+id/drunkWaterSize"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/intro"
        app:layout_constraintLeft_toLeftOf="@id/waterDrunkTime"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more"
        android:layout_marginEnd="24dp"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:id="@+id/more"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>