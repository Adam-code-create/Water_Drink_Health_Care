<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/action_bar_main"
        android:background="@color/main_color2"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_setting"
        android:layout_marginEnd="6dp"
        android:padding="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:id="@+id/setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_main"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controller"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_main"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/action_bar_main"
        app:layout_constraintBottom_toTopOf="@id/main_btn"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/ic_chat"
                android:id="@+id/chat_box"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toRightOf="@id/assistant"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Do not drink water while standing"
                app:layout_constraintTop_toTopOf="@id/chat_box"
                app:layout_constraintLeft_toLeftOf="@id/chat_box"
                app:layout_constraintRight_toRightOf="@id/chat_box"
                app:layout_constraintBottom_toBottomOf="@id/chat_box"

                />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_rawRes="@raw/assistant"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_margin="16dp"
                android:id="@+id/assistant"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/chat_box"
                app:layout_constraintBottom_toBottomOf="@id/chat_box"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/assistant"
               app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:lottie_rawRes="@raw/intro"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="false"
                        android:id="@+id/intro"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_cup"
                        android:id="@+id/drop"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/intro"
                        app:layout_constraintLeft_toLeftOf="@id/timer"

                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_time"
                        android:id="@+id/timer"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintTop_toTopOf="@id/intro"
                        app:layout_constraintRight_toLeftOf="@id/waterDrinkTime"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="12sp"
                        android:id="@+id/waterDrinkTime"
                        android:textColor="@color/black"
                        app:layout_constraintHorizontal_bias="0.7"
                        app:layout_constraintTop_toTopOf="@id/intro"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:id="@+id/drinkWaterSize"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/intro"
                        app:layout_constraintLeft_toLeftOf="@id/waterDrinkTime"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listDrunkWater"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toBottomOf="@id/intro"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_rawRes="@raw/circle_wave"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/main_btn"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tap to add water you have just drunk"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
       app:layout_constraintTop_toBottomOf="@id/main_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/main_btn"
        app:layout_constraintRight_toRightOf="@id/main_btn"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_cup"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/main_btn"
        app:layout_constraintBottom_toBottomOf="@id/main_btn"
        app:layout_constraintLeft_toLeftOf="@id/main_btn"
        app:layout_constraintRight_toRightOf="@id/main_btn"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dairy target"
        android:layout_margin="16dp"
        android:textSize="12sp"
        android:gravity="center"
        android:id="@+id/target"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_btn"
        app:layout_constraintLeft_toRightOf="@id/main_btn"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2210ml"
        android:id="@+id/targetWater"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target"
        app:layout_constraintLeft_toRightOf="@id/main_btn"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Current situation"
        android:layout_margin="16dp"
        android:textSize="12sp"
        android:gravity="center"
        android:id="@+id/current"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_btn"
        app:layout_constraintTop_toTopOf="@id/main_btn"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2210ml"
        android:gravity="center"
        android:id="@+id/currentSituation"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/main_color2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_btn"
        app:layout_constraintTop_toBottomOf="@id/target"

        />
    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cpb_background_progressbar_color="@color/main_color"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progress_direction="to_left"
        app:cpb_progressbar_color="@color/main_color2"
        app:cpb_progressbar_width="10dp"
        app:cpb_round_border="false"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="10dp"
        android:id="@+id/change_cup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_btn"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cup"
            android:layout_gravity="center"
            android:background="?selectableItemBackgroundBorderless"
            />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="10dp"
        app:layout_constraintCircleAngle="125"
        app:layout_constraintCircleRadius="35dp"
        app:layout_constraintCircle="@id/change_cup"
        app:layout_constraintRight_toRightOf="@id/change_cup"
        app:layout_constraintLeft_toRightOf="@id/change_cup"
        app:layout_constraintTop_toTopOf="@id/change_cup"
        app:layout_constraintBottom_toBottomOf="@id/change_cup"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_change_circle"
            android:layout_gravity="center"
            android:id="@+id/cup"

            />


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>